<script>
    document.addEventListener('DOMContentLoaded', () => {
        const toggleButton = document.getElementById('toggleTable');
        const fontTable = document.getElementById('fontTable');

        if (toggleButton && fontTable) {
            toggleButton.addEventListener('click', () => {
                fontTable.classList.toggle('hidden');
                toggleButton.textContent = fontTable.classList.contains('hidden') ? 'Show' : 'Hide';
            });
        }
    });
</script>