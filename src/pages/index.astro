---
import Layout from '../layouts/Layout.astro';
import ShowCaseFonts from '../components/ShowCaseFonts.astro';
---

<Layout title="Landing Pages - Nossa Empresa">
    <main class="container mx-auto px-4 py-16 bg-white max-w-6xl rounded-3xl ">
        <h1 class="mt-20 text-4xl font-sans-bold text-center mb-12">Landing Pages</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-4xl mx-auto">
            <section class="flex flex-col items-center bg-slate-100">
                <h2 class="text-2xl text-center font-sans-semibold mb-4">Casa e Cuidados</h2>
                <ul class="list-disc pl-5">
                    <li><a href="/ferramentas/extratora-multi-flor" class="text-bl text-centerue-600 hover:underline">Extratora Multi Flor</a></li>
                </ul>
            </section>

            <section class="flex flex-col items-center bg-slate-100">
                <h2 class="text-2xl text-center font-sans-semibold mb-4">Ferramentas</h2>
                <ul class="list-disc pl-5">
                    <li><a href="/ferramentas/esmerilhadeira" class="text-blue-600 text-center hover:underline">Esmerilhadeira</a></li>
                </ul>
            </section>

            <section class="flex flex-col items-center bg-slate-100">
                <h2 class="text-2xl text-center font-sans-semibold mb-4">Cozinha</h2>
                <ul class="list-disc pl-5">
                    <li><a href="/cozinha/fogao-linha-fogaca" class="text-blue-600 text-center hover:underline">Fogão Linha Fogaça</a></li>
                </ul>
            </section>
        </div>
        <div class="flex flex-col items-center justify-center mt-20">
            <ShowCaseFonts />
        </div>
    </main>
</Layout>
